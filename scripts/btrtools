#!/usr/bin/env python3
"""
BTR-TOOLS - Command-line toolkit for Btrieve database file analysis.

This script provides a unified entry point for all BTR-TOOLS commands.
"""

import sys
import os

# Add the btrtools package to the path
script_dir = os.path.dirname(os.path.abspath(__file__))
package_dir = os.path.dirname(script_dir)
sys.path.insert(0, package_dir)

from btrtools.cli import main

if __name__ == '__main__':
    sys.exit(main())